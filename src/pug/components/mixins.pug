mixin list(items)
    .navbar-toggler-icon
    div.burger 
        span
    ul.menu.align-items-center 
        for item in items    
            li 
                a.px-4(href=item.url)= item.name

mixin cards(item)
    figure(class="ticket mx-auto " + item.class) 
        figcaption 
            picture
                source(srcset=item.src + ".webp" type="image/webp") 
                img(src=item.src + ".png" alt=item.alt)
            p.tour 
                strong= item.name
            h3= item.price + " грн*"
            p.desk= item.description

mixin cardsMiddle(item)
    figure(class="special " + item.class + " " + item.clas) 
        picture
            source(srcset=item.src + ".webp" type="image/webp") 
            img(src=item.src + ".jpg" alt=item.alt)
        figcaption 
            p.cruise 
                strong= item.name
            p.desc= item.description
            .d-flex.justify-content-between.align-items-end
                h3= item.price + " грн."
                a(href=item.href) замовити

mixin cardsInfo(item)
    figure(class="info")
        figcaption 
            div.flex
                picture
                    source(srcset=item.src + ".webp" type="image/webp")
                    img(src=item.src + ".png" alt=item.alt)
                div    
                    h4= item.name + ".xls"
                    p.size= "Розмір файла: " + item.size
            p.description= item.description 
            a.knopka(href=item.href) 
                img(src="img/cloud.png") 
                span скачати
                
